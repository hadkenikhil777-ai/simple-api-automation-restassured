<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="API Automation Suite">
    <groups>
        <run>
            <include name="Create User"/>
            <include name="JWT Auth"/>
            <include name="JWT Fresh Token"/>
            <include name="Product data"/>
            <include name="Product Listing"/>
        </run>
    </groups>

<test name="JWT Tests">
    <classes>
        <class name="tests.JwtAuthFlowTest"/>
        <class name="tests.JwtAuthPositiveTest"/>
        <class name="tests.JwtAuthNegativeTest"/>
        <class name="tests.JwtRefreshTokenTest"/>
    </classes>
</test>

<test name="User Tests">
    <classes>
        <class name="tests.CreateUserPositiveTest"/>
        <class name="tests.CreateUserNegativeTest"/>
    </classes>
</test>
    <test name="Product Listing">
        <classes>
            <class name="tests.ProductListingPositiveTest"/>
            <class name="tests.ProductDataValidationTest"/>
            <class name="tests.ProductCategoryFilteringTest"/>
            <class name="tests.ProductSortingTest"/>
        </classes>
    </test>


</suite>
